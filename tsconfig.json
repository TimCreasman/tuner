{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "target": "es6",
    "module": "esnext",
    "types": ["reflect-metadata"],
    "lib": [
      "es2019",
      "es6",
      "dom",
      "webworker"
    ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*"
  ]
}
